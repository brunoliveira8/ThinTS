    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.0",
    "rimraf": "^2.6.2",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "express": "^4.15.4",
    "reflect-metadata": "^0.1.10"
  }
