{
  "name": "thints",
  "version": "0.0.1",
  "description": "A Node.js RestAPI Framework based in Angular2+ flow and Typescript.",
  "repository": "https://github.com/murilopl/ThinTS.git",
  "homepage": "https://github.com/murilopl/ThinTS",
  "scripts": {
    "clean:dist": "rimraf -- dist",
