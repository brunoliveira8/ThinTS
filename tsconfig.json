{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "outDir": "./bin",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "rootDirs": [
      "./",
      "./src"
    ],
    "inlineSourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "target": "es2015",
    "lib": [
      "dom",
      "es6",
      "es2015"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "reflect-metadata",
      "express"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./bin",
    "./node_modules",
    "**/*.d.ts"
  ]
}